<% provide(:title, "ホーム") %>

<div class="row">
  <div class="col-sm-12">
    <div class="center jumbotron">
      <h1>お弁当予約</h1>
    </div>

    <h2>あなたの予約状況</h2>
    <table class="table">
      <caption>予約一覧</caption>
      <thead>
        <tr>
          <th>予約日</th>
          <th>弁当の種類</th>
          <th>値段</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td><%= reservation.reservation_date %></td>
            <td><%= reservation.lunch_box.name %></td>
            <td><%= reservation.lunch_box.price %></td>
            <td><%= button_to '削除', reservation, method: :delete, class: "btn btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <h2>月ごとの支払い金額</h2></h2>
    <table class="table">
      <caption>金額一覧</caption>
      <thead>
        <tr>
          <th>月</th>
          <th>利用金額計</th>
        </tr>
      </thead>
      <tbody>
        <% @amount_per_months.each do |amount_per_month| %>
          <tr>
            <td><%= amount_per_month[0] %></td>
            <td><%= amount_per_month[1] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
